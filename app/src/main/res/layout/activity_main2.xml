<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.justinkimble.atmproject.Main2Activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select an option:"
        android:textSize="20dp" />

    <Button
        android:id="@+id/withdrawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="withdrawalClicked"
        android:text="Withdrawal"
        android:textSize="15dp" />

    <Button
        android:id="@+id/deposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="depositClicked"
        android:text="Deposit"
        android:textSize="15dp" />

    <Button
        android:id="@+id/checkMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="checkMoneyClicked"
        android:text="Check Balances"
        android:textSize="15dp" />

    <Button
        android:id="@+id/payBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="payBillClicked"
        android:text="Pay Bill"
        android:textSize="15dp" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:onClick="logOutClicked"
        android:text="Log Out" />

</LinearLayout>
